/**
 * Memory of eight 16-bit registers.
 * If load is asserted, the value of the register selected by
 * address is set to in; Otherwise, the value does not change.
 * The value of the selected register is emitted by out.
 */
CHIP RAM8 {
    IN in[16], load, address[3];
    OUT out[16];

    PARTS:
    // Sends load (1 or 0) to address and 0 to rest
    DMux8Way(in=load, sel=address, a=r1, b=r2, c=r3, d=r4, 
    e=r5, f=r6, g=r7, h=r8);
    
    // Send in to all registers, with 0s to all except
    // the address, which receieves load (1 or 0)
    Register(in=in, load=r1, out=out1);
    Register(in=in, load=r2, out=out2);
    Register(in=in, load=r3, out=out3);
    Register(in=in, load=r4, out=out4);
    Register(in=in, load=r5, out=out5);
    Register(in=in, load=r6, out=out6);
    Register(in=in, load=r7, out=out7);
    Register(in=in, load=r8, out=out8);
    
    // Read out from the same address
    Mux8Way16(a=out1, b=out2, c=out3, d=out4,
    e=out5, f=out6, g=out7, h=out8, sel=address, out=out);
}